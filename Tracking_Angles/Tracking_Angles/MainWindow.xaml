<Window x:Class="Tracking_Angles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Tracking_Angles"
        Title="Kinect | Color, Depth, Infrared, Tracking" Height="1080" Width="1920" Loaded="Window_Loaded" Closed="Window_Closed">
    <Grid>
        <Image Name="camera" />
        <Canvas Name="canvas" />
        <Grid Style="{StaticResource GridButtonsStyle}">
            <StackPanel Style="{StaticResource StackPanelButtonsStyle}">
                <Button Content="Tracking" Style="{StaticResource ButtonStyle}" Click="Tracking_Click" />
                <TextBlock x:Name="VectorAngle" Style="{StaticResource TextBlockStyle}" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
